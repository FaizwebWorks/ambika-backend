{
  "name": "backend",
  "version": "1.0.0",
  "description": "Ambika International Backend API",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "start:dev": "NODE_ENV=development node server.js",
    "start:cluster": "NODE_ENV=production CLUSTER_MODE=true node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "start:prod:cluster": "NODE_ENV=production CLUSTER_MODE=true node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "dev:debug": "NODE_ENV=development DEBUG=* nodemon server.js",
    "seed": "node seedData.js",
    "seed:notifications": "node seedNotificationData.js",
    "seed:subscriptions": "node seedSubscriptionData.js",
    "seed:products": "node setupDatabase.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:notifications": "node testNotifications.js",
    "logs": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "setup": "chmod +x setup.sh && ./setup.sh",
    "clean:logs": "rm -rf logs/*.log",
    "health": "curl http://localhost:3000/health || curl https://ambika-backend-weyi.onrender.com/health",
    "build": "echo 'No build step required for Node.js'",
    "deploy": "chmod +x deploy.sh && ./deploy.sh",
    "production": "NODE_ENV=production npm start",
    "lint": "echo 'Add ESLint configuration if needed'",
    "security-check": "npm audit",
    "prestart": "npm run security-check"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cloudinary": "^1.41.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-slow-down": "^1.6.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.1",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^6.10.1",
    "rate-limit-mongo": "^2.3.2",
    "razorpay": "^2.9.6",
    "stripe": "^18.4.0",
    "winston": "^3.12.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
