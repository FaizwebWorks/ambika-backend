# Backend Environment Configuration Template
# Copy this file to .env and update the values

# Application Settings
NODE_ENV=development
PORT=3000
CLUSTER_MODE=false

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ambika-b2b

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-complex
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_EXPIRE=30d

# Encryption Key (for sensitive data encryption)
ENCRYPTION_KEY=your-32-character-encryption-key

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@ambikainternational.com
EMAIL_FROM_NAME=Ambika B2B

# SMTP Configuration (alternative to Gmail)
# SMTP_HOST=smtp.your-provider.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-smtp-user
# SMTP_PASSWORD=your-smtp-password

# Admin Configuration
ADMIN_EMAILS=admin1@example.com,admin2@example.com
TEST_EMAIL=test@example.com

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Payment Gateway Configuration
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Razorpay
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Security Configuration
BLOCKED_IPS=192.168.1.100,10.0.0.1
RATE_LIMIT_SKIP_IPS=127.0.0.1,::1

# Company Information
COMPANY_NAME=Ambika International
COMPANY_EMAIL=info@ambikab2b.com
COMPANY_PHONE=+91-1234567890
COMPANY_ADDRESS=Your Company Address

# File Upload Configuration
MAX_FILE_SIZE=10485760
FILE_UPLOAD_PATH=./public/uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Session Configuration
SESSION_SECRET=your-session-secret-key

# SMS Configuration (Optional)
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=AMBIKA

# Cache Configuration
REDIS_URL=redis://localhost:6379

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_MORGAN_LOGGING=true

# Development Settings
DEBUG=app:*
