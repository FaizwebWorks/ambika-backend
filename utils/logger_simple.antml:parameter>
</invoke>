const logger = {
  info: (message) => {
    if (process.env.NODE_ENV === 'development') {
      console.log(`[INFO] ${new Date().toISOString()}: ${message}`);
    }
  },
  error: (message) => {
    console.error(`[ERROR] ${new Date().toISOString()}: ${message}`);
  },
  warn: (message) => {
    if (process.env.NODE_ENV === 'development') {
      console.warn(`[WARN] ${new Date().toISOString()}: ${message}`);
    }
  }
};

module.exports = logger;